#include <stdio.h>

int main() {
    float u, a, t;

    // Input initial velocity, acceleration, and time
    printf("Enter initial velocity (u): ");
    scanf("%f", &u);

    printf("Enter acceleration (a): ");
    scanf("%f", &a);

    printf("Enter time (t): ");
    scanf("%f", &t);

    // Calculate displacement using the formula s = ut + (1/2)at^2
    float s = u * t + 0.5 * a * t * t;

    // Print the calculated displacement
    printf("The displacement (s) is: %.2f\n", s);

    return 0;
}
